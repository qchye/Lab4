<head>
    <link rel="stylesheet" href="/assets/profile.css">
</head>
<body>
<div class="background-image">
</div>
<div class="page">
    <div class="banner">
        <div class="homelink">
            <%if (currentuser.type === "waster") {%>
                <Header><a href="/charityhome" >Food 4 Thought</a></Header>
                <Slogan>Turning Trash Into Treasure.</Slogan>
            </a>
            <%}%>
            <%if (currentuser.type === "charity") {%>
                <Header><a href="/charityhome" >Food 4 Thought</a></Header>
                <Slogan>Turning Trash Into Treasure.</Slogan>
            </a>
            <%}%>
        </div>
        <div class="sidelink">
            <%if (currentuser.type === "waster") {%>
            <p><a href="/wasteruser/<%=currentuser.id%>">Profile</a></p>
            <%}%>
            <%if (currentuser.type === "charity") {%>
            <p><a href="/charityuser/<%=currentuser.id%>">Profile</a></p>
            <%}%>
            <p style="padding-left: 2em"><a href="/">Log out</a></p>
        </div>
    </div>
    <div class="editinfo">Type comma separated values for waste input</div>
    <div class="editpart">
        <form action="/edit" method="POST">
            <div>
                <p>Bio <br><textarea type="text" placeholder="<%=currentuser.bio%>" name="bio"></textarea>
                </p>
                <p>Location <br><input type="text" placeholder="<%=currentuser.address%>" name="address">
                </p>
                <%if (currentuser.type === "charity") {%>
                <p>Waste Accepted <br><input type="text" placeholder="<%=currentuser.wasteaccepted%>" name="wasteaccepted">
                </p>
                <%}%>
                <%if (currentuser.type === "waster") {%>
                <p>Waste Produced <br><input type="text" placeholder="<%=currentuser.wasteproduced%>" name="wasteproduced">
                </p>
                <%}%>
                <button type="submit">Done</button>

            </div>


        </form>
    </div>
    <div class="bottompart">
        <div class="bottomright">
            Powered by <br>The Caffeine Addicts!
        </div>
    </div>
</div>
</body>